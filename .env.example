# Environment Configuration for Planka Integration

# Planka API Configuration
PLANKA_API_URL=http://your-planka-instance/api
PLANKA_USERNAME=your-username-or-email
PLANKA_PASSWORD="your-password-with-special-chars"

# Target Board Configuration  
PLANKA_BOARD_ID=your-board-id-here

# Note: Lists and labels are now dynamically discovered from Planka
# No need to configure specific list names - create them in Planka UI

# Create Flow Details - Configure interactive task creation workflow
CREATE_FLOW_ASK_DESCRIPTION=true
CREATE_FLOW_ASK_SUBTASKS=true  
CREATE_FLOW_ASK_CHOOSE_LIST=true
CREATE_FLOW_ASK_CHOOSE_LABEL=true
CREATE_FLOW_ASK_SET_DUE_DATE=true

# File Paths
TODO_FILE_PATH=../../TODO.md
BACKUP_DIR=./backups

# Sync Settings
AUTO_SYNC_INTERVAL=30000
MAX_RETRIES=3
ENABLE_LABELS=true
ENABLE_DUE_DATES=true

# Debug Settings
DEBUG=false
LOG_LEVEL=info